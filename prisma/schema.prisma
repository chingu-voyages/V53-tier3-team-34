generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  events Events[]
}

model Events {
  id Int @id @default(autoincrement())
  title String
  date DateTime
  description String?
  eventReason String?
  guestHonor String?
  host String?
  guestsNumber Int?
  eventAddress String?
  outdoor Boolean @default(false)
  eventFee Float?
  publicEvent Boolean @default(false)
  requireGuestApproval Boolean @default(false)
  author Users @relation(fields: [authorId], references: [id])
  authorId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
